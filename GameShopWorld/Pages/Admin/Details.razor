@page "/admin/games/details/{id:long}"
<h3 class="bg-info text-white text-center p-1">Details</h3>
<table class="table table-sm table-bordered table-striped">
<tbody>
<tr><th>Thứ Tự</th><td>@Game.GameID</td></tr>
<tr><th>Tên Game</th><td>@Game.Title</td></tr>
<tr><th>Thông Tin</th><td>@Game.Description</td></tr>
<tr><th>Thể Loại</th><td>@Game.Genre</td></tr>
<tr><th>Gía Bán</th><td>@Game.Price.ToString("C")</td></tr>
</tbody>
</table>
<NavLink class="btn btn-warning" href="@EditUrl">Edit</NavLink>
<NavLink class="btn btn-secondary" href="/admin/games">Back</NavLink>
@code {[Inject]
public IGameShopWorldRepository Repository { get; set; }
[Parameter]
public long Id { get; set; }
public Game Game { get; set; }
protected override void OnParametersSet()
{
Game = Repository.Games.FirstOrDefault(b => b.GameID == Id);
}
public string EditUrl => $"/admin/games/edit/{Game.GameID}";
}
